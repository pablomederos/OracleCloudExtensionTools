{
    "manifest_version": 3,
    "name": "Oracle Cloud Tools",
    "version": "1.0",
    "description": "Injects helper script into Oracle Cloud.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Oracle Cloud Tools"
    },
    "content_scripts": [
        {
            "matches": [
                "https://fa-etqd-saasfaprod1.fa.ocs.oraclecloud.com/*"
            ],
            "js": [
                "loader.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/styles/dialog.js",
                "src/utils/dom.js",
                "src/tasks/azure-devops-api.js",
                "src/tasks/azure-devops-dialog.js",
                "src/app.js"
            ],
            "matches": [
                "https://fa-etqd-saasfaprod1.fa.ocs.oraclecloud.com/*"
            ]
        }
    ],
    "icons": {
        "16": "tools.png",
        "48": "tools.png",
        "128": "tools.png"
    }
}